<section class="home-container">
    <header class="header">
        <h1>W.A.B.A</h1>
        <P>write a blog about-it</P>
    </header>
    <div class="all-articles">
         {{#each articleArr as |article|}}
    <section class="article-cards">
        <div class="card-container">
            <div class="card-header">
                <span class="article-title">Title: {{article.title}}</span>
            </div>
            <div class="article">
                <span class="article-body">Article: {{article.article_body}}</span>
            </div>
            <div class="poster">
                <span class="article-poster">posted by: {{article.user.name}}</span>
            </div>
        </div>
    </section>
    {{/each}}

    </div>
   
</section>